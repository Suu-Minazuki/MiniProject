<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item><layer-list>
        <item>
            <shape>
                <solid
                    android:color="#FFFFFF">
                </solid>

                <corners android:radius="5dp" />

                <padding
                    android:bottom="3dp"
                    android:left="3dp"
                    android:right="3dp"
                    android:top="3dp" />
                <stroke
                    android:width="1dp"
                    android:color="#9C9292"/>
            </shape>
        </item>
        <item android:drawable="@drawable/ic_drop"
            android:gravity="right">
        </item>
    </layer-list></item>
</selector>