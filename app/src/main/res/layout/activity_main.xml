<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/splash_screen_logo"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginTop="60dp"
        android:padding="20dp"
        android:src="@drawable/ams_logo" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/splash_screen_title"
        android:text="WELCOME TO \n ALUMNI MANAGEMENT SYSTEM"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:layout_below="@+id/splash_screen_logo"
        android:textColor="@color/black"
        android:textSize="28sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-smallcaps"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/splash_screen_desc"
        android:text="A perfect place to know more about your ALumni:)"
        android:gravity="center"
        android:layout_below="@+id/splash_screen_title"
        android:layout_marginTop="10dp"
        />
</RelativeLayout>